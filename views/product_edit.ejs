<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Edit</title>
    <link rel="stylesheet" href="styles/admin.css">
</head>

<body>
    <!--Header Section-->
    <header>
        <div class="logo-container">
            <img src="images/logo.png" alt="Munder Difflin Logo">
        </div>
        <h1>Product Edit Page</h1>
    </header>
    <!--Navigation Section-->
    <nav class="navigation">
        <ul>
            <li><a href="admin_upload.html">Bulk Upload</a></li>
            <li><a href="product_edit.html">Product Edit</a></li>
            <li><a href="sign_out.php">Sign Out</a></li>
        </ul>
    </nav>
    <!--Form Section-->
    <main>
        <h2>Edit Product</h2>
        <form action="/update-product" method="post">
            <input type="hidden" name="id" value="<%= product.id %>">
            <div>
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" value="<%= product.name %>">
            </div>
            <div class="form-group">
                <label for="image_path">Image Path:</label>
                <input type="text" id="image_path" name="image_path" class="form-control">
            </div>
            <div>
                <label for="price">Price:</label>
                <input type="number" id="price" name="price" step="0.01" value="<%= product.price %>">
            </div>
            <div>
                <label for="description">Description:</label>
                <textarea id="description" name="description"><%= product.description %></textarea>
            </div>
            <% if (product.categories) { %>
                <div>
                    <label for="category">Category:</label>
                    <select id="category" name="category">
                        <% product.categories.forEach(category=> { %>
                            <option value="<%= category.id %>" <%=product.categoryId===category.id ? 'selected' : '' %>>
                                <%= category.name %>
                            </option>
                            <% }); %>
                    </select>
                </div>
                <% } %>
                    <button type="submit">Update Product</button>
        </form>

        <h2>Add New Product</h2>
        <form action="/add-product" method="post" class="product-form">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" class="form-control">
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <textarea id="description" name="description" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label for="category">Category:</label>
                <select id="category" name="category" class="form-control">
                    <% categories.forEach(category=> { %>
                        <option value="<%= category.id %>">
                            <%= category.name %>
                        </option>
                        <% }); %>
                </select>
            </div>
            <div class="form-group">
                <label for="image_path">Image Path:</label>
                <input type="text" id="image_path" name="image_path" class="form-control">
            </div>
            <div class="form-group">
                <label for="price">Price:</label>
                <input type="number" step="0.01" id="price" name="price" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Add Product</button>
        </form>


</body>

</html>